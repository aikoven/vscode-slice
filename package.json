{
    "name": "slice",
    "displayName": "Slice",
    "description": "Syntax highlighting for ZeroC Ice's IDL Slice",
    "version": "0.0.3",
    "icon": "images/icon.png",
    "publisher": "aikoven",
    "repository": {
        "type": "git",
        "url": "https://github.com/aikoven/vscode-slice.git"
    },
    "engines": {
        "vscode": "^1.16.0"
    },
    "categories": [
        "Languages",
        "Snippets"
    ],
    "contributes": {
        "languages": [
            {
                "id": "slice",
                "aliases": [
                    "Slice",
                    "slice"
                ],
                "extensions": [
                    ".ice"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "slice",
                "scopeName": "source.slice",
                "path": "./syntaxes/Slice.tmLanguage"
            }
        ],
        "snippets": [
            {
                "language": "slice",
                "path": "./snippets/slice.json"
            }
        ]
    }
}
